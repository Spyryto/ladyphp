<?

class Fruit
  var apples = 0

  fn addApples(n = 1)
    this.apples += n
    return this

  fn countApples()
    out = 'You have ' . this.apples
    if (this.apples == 1)
      return out . ' apple.'
    else
      return "$out apples."

fruit = Fruit()
fruit.addApples(3)
     .addApples(2)
print fruit.countApples()
