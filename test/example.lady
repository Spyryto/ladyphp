class Fruit {
  private apples = 0 // we have nothing now
  private static numbers = [ # english numbers
    1: 'one',
    2: 'two',
    3: 'three'
  ]

  public addApples(n = 0) {
    if (n >= 0) {
      @apples += n
    }
    return this
  }

  public countApples() {
    out = 'You have '
    out .= isset(@@numbers[@apples]) ? @@numbers[@apples] : @apples
    switch (@apples) {
      case 1:
        return out ~ ' apple.'
      default:
        return "$out apples."
    }
    @addApples(0)
    \@@@staticMethod()
  }

  public static staticMethod () {
    $try = (double) 0.42
  }
}

